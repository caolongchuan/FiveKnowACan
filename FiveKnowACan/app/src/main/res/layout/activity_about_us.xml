<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.AboutUsActivity">

    <ImageView
        android:layout_width="100px"
        android:layout_height="100px"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/margin_8dp"
        android:layout_marginTop="@dimen/margin_8dp"
        android:background="@mipmap/icon_logo" />

    <TextView
        android:id="@+id/about_us"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/margin_8dp"
        android:text="@string/app_name"
        android:textSize="@dimen/text_size" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_42"
                android:background="@drawable/person_item_line_bg"
                android:paddingRight="@dimen/margin_8dp">

                <TextView
                    android:id="@+id/textView2"
                    style="@style/TextStyles"
                    android:text="公司名称" />

                <TextView
                    android:id="@+id/about_tv_weixin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="某某某有限公司"
                    android:textSize="@dimen/text_sub_size" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_42"
                android:background="@drawable/person_item_line_bg"
                android:paddingRight="@dimen/margin_8dp">

                <TextView
                    style="@style/TextStyles"
                    android:text="联系电话" />

                <TextView
                    android:id="@+id/about_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="@string/company_phone"
                    android:textSize="@dimen/text_sub_size" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_42"
                android:background="@drawable/person_item_line_bg"
                android:paddingRight="@dimen/margin_8dp">

                <TextView
                    style="@style/TextStyles"
                    android:text="官方网站" />

                <TextView
                    android:id="@+id/about_url"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="http://www.hbsddz.com"
                    android:textSize="@dimen/text_sub_size" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relative_check_update"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_42"
                android:background="@drawable/person_item_line_bg"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/more_update"
                    style="@style/TextStyles"
                    android:text="检测更新" />

                <TextView
                    android:id="@+id/about_us_version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/margin_8dp"
                    android:text="v1.0"
                    android:textSize="@dimen/text_size" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relative_clear_cache"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_42"
                android:background="@drawable/person_item_line_bg"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/more_helper"
                    style="@style/TextStyles"
                    android:text="清理缓存" />

                <TextView
                    android:id="@+id/tv_kb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/margin_8dp"
                    android:text="0KB"
                    android:textSize="@dimen/text_size" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/margin_16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/about_service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/margin_8dp"
                android:text="用户服务协议"
                android:textColor="#ff2196f3"
                android:textSize="@dimen/text_sub_size"
                android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="ALL  Rights Reserved XTYB.com"
                android:textColor="#ff999999"
                android:textSize="@dimen/text_sub_size" />
        </LinearLayout>
    </RelativeLayout>


</LinearLayout>