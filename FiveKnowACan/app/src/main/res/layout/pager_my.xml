<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_200"
        android:background="@color/title_color"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_person"
            android:layout_width="140px"
            android:layout_height="140px"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_man" />

        <TextView
            android:id="@+id/tv_person_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_18"
            android:text="cao"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_14" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/background_color" />

    <!--
           android:background="@drawable/person_item_line_bg"
   -->
    <LinearLayout
        android:id="@+id/linear_family_changepassword"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:paddingLeft="@dimen/dp_16">

        <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/icon_changepassword" />

        <TextView
            style="@style/PersonTextStyle"
            android:layout_gravity="center_vertical"
            android:text="@string/changepassword" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/background_color" />
    <!--
        android:background="@drawable/person_item_line_bg"
    -->

    <LinearLayout
            android:id="@+id/linear_family_about"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            android:paddingLeft="@dimen/dp_16">

            <ImageView
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/icon_about" />

            <TextView
                style="@style/PersonTextStyle"
                android:layout_gravity="center_vertical"
                android:text="@string/about" />

        </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/background_color" />

    <Button
        android:id="@+id/btn_exit"
        android:layout_width="fill_parent"
        android:layout_height="80px"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/dp_16"
        android:background="@drawable/back_login_tijiao"
        android:gravity="center"
        android:text="退出当前账号"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size" />


</LinearLayout>